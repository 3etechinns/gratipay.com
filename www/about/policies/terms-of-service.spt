import os
from gratipay.utils import markdown

terms_path = os.path.join(os.path.dirname(__file__), 'terms-of-service.md')
terms = open(terms_path).read().decode('ascii')
terms = '\n'.join(terms.splitlines()[2:])

[---]
title = _("Policies")
subhead = _("Terms of Service")
[---] text/html
{% extends "templates/about-policies.html" %}

{% block content %}
<div class="col0">
<p><i>Last Updated: May 12, 2015</i></p>
{{ markdown.render(terms) }}
</div>
{% endblock %}
